# Production Environment Variables for Railway/Render

# Database (Railway PostgreSQL otomatik sağlayacak)
DATABASE_URL=postgresql://username:password@host:port/truckbus_production

# JWT Secret (güvenli bir key kullan)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024

# Server Configuration
NODE_ENV=production
PORT=3005

# Frontend URL (CORS için)
FRONTEND_URL=https://trucksbus.com.tr

# File Upload (Railway için)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./public/uploads

# Socket.IO
SOCKET_CORS_ORIGIN=https://trucksbus.com.tr

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
